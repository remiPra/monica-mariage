---
import PrendreRendezVousButtonHome from "./PrendreRendezVousButtonHome.astro";

// Composant Astro pour la section Destockage de robes de mariée
const destockageRobes = [
  {
    src: "/images/robes/gallery/desktop/monica-mariage-robe-de-mariee-sirene-accadia-26-gallery-desktop.webp",
    alt: "Robe de mariée Accadia en déstockage - Toulouse",
    label: "Accadia",
    link: "/promo",
  },
  {
    src: "/images/robes/gallery/desktop/monica-mariage-robe-de-mariee-robes-de-mariee-boheme-chic-venus-40-42-8-gallery-desktop.webp",
    alt: "Robe de mariée Venus en déstockage - Toulouse",
    label: "Venus",
    link: "/promo",
  },
  {
    src: "https://res.cloudinary.com/dkbsvrpdc/image/upload/v1742146786/images_optimisees/ft4pibwu9sox5crbnu7h.webp",
    alt: "Robe de mariée Mykonos en déstockage - Toulouse",
    label: "Mykonos",
    link: "/promo",
  },
  {
    src: "https://res.cloudinary.com/dkbsvrpdc/image/upload/v1742146668/images_optimisees/uyxia6aemdpldqlceh6k.webp",
    alt: "Robe de mariée Fiamma en déstockage - Toulouse",
    label: "Fiamma",
    link: "/promo",
  },
  {
    src: "/images/robes/gallery/desktop/monica-mariage-robe-de-mariee-promo-sirene-mollia-21-gallery-desktop.webp",
    alt: "Robe de mariée Mollia en déstockage - Toulouse",
    label: "Mollia",
    link: "/promo",
  },
  {
    src: "/images/robes/gallery/desktop/monica-mariage-robe-de-mariee-sirene-jade-37-gallery-desktop.webp",
    alt: "Robe de mariée Jade  en déstockage - Toulouse",
    label: "Jade",
    link: "/promo",
  },
  {
    src: "/images/robes/gallery/desktop/monica-mariage-robe-de-mariee-robes-de-mariee-boheme-chic-simbelly-taille-40-19-gallery-desktop.webp",
    alt: "Robe de mariée Simbelly en déstockage - Toulouse",
    label: "Simbelly",
    link: "/promo",
  },
  {
    src: "/images/robes/gallery/desktop/monica-mariage-robe-de-mariee-robes-de-mariee-boheme-chic-analisa-taille-40-42-21-gallery-desktop.webp",
    alt: "Robe de mariée Annalisa en déstockage - Toulouse",
    label: "Annalisa",
    link: "/promo",
  },
];
---

<section class="py-12 bg-gradient-to-b from-white to-[#FDE9E6]">
  <div class="container mx-auto px-4 max-w-6xl">
    <!-- En-tête raffiné avec titre et éléments décoratifs -->
    <div class="flex flex-col items-center mb-10">
      <!-- Titre élégant -->
      <h2 class="font-vibes text-center text-4xl md:text-5xl text-[#af7749] mb-2">
        Destockage Robes de Mariée - Prix Avantageux

      </h2>
      
      <!-- Trait décoratif -->
      <div class="flex items-center justify-center gap-4 mb-6">
        <span class="h-px w-16 bg-[#C5A880]"></span>
        <p class="text-[#8B7569] text-xs font-medium">PRIX AVANTAGEUX</p>
        <span class="h-px w-16 bg-[#C5A880]"></span>
      </div>
    </div>
  
    <!-- Collection de robes en déstockage -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {destockageRobes.map((dress) => (
        <a 
          href={dress.link} 
          class="relative text-center overflow-hidden cursor-pointer fade-in rounded-2xl h-[300px] sm:h-[400px] shadow-md"
        >
                        {/*    <div class="absolute w-full h-full inset-0 bg-[#af7749] opacity-20 z-10" />*/}
          
          <!-- Badge "Promotion" -->
          <div class="absolute top-4 right-4 bg-[#E07A5F] text-white text-xs font-medium px-2 py-1 rounded-full z-30 shadow-sm">
            PROMO
          </div>
          
          <img
            src={dress.src}
            alt={dress.alt}
            class="absolute top-0 w-full h-full object-cover hover:scale-105 transition-transform duration-300 z-0"
            loading="lazy"
          />
          
          <div class="absolute bottom-0 left-0 w-full text-center bg-gradient-to-t from-[#af7749] to-transparent p-4 md:p-6 rounded-b-2xl z-20">
            <p class="text-white font-vibes text-2xl md:text-3xl mb-2 md:mb-4 drop-shadow-lg">
              {dress.label}
            </p>
            
            <!-- Badge de prix spécial -->
            <div class="bg-white text-[#af7749] font-medium text-sm px-3 py-1 rounded-full inline-block mb-2 md:mb-3 shadow-sm">
              Prix réduit
            </div>
            
            <!-- Bouton visible sur desktop -->
            <button class="w-[200px] mx-auto bg-[#C5A880] hidden md:block text-sm text-white font-semibold px-6 py-3 rounded-full shadow-lg hover:bg-[#A27E5D] hover:scale-105 transition-all duration-300">
              Voir cette robe
            </button>
          </div>
        </a>
      ))}
    </div>
  
    <!-- Texte descriptif et bouton d'action -->
    <div class="flex flex-col items-center mt-10 px-4">
      <p class="max-w-2xl mx-auto text-[#5F4B3F] leading-relaxed mb-8 text-center">
       Sélection privilégiée de créations précédentes à tarifs avantageux. Ces pièces uniques en tulle, dentelle française ou organza conservent toute leur élégance et peuvent bénéficier d'ajustements personnalisés. Collection renouvelée régulièrement avec nos plus beaux modèles des saisons antérieures.

      </p>
      
      <PrendreRendezVousButtonHome />
    </div>
  </div>
</section>

<style>
  /* Animation de fade-in */
  .fade-in {
    animation: fadeIn 0.6s ease-in-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>