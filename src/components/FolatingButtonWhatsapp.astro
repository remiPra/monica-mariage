  <script>
    // JavaScript pour gÃ©rer les interactions
    document.addEventListener("DOMContentLoaded", () => {
      const floatingBtn = document.getElementById("whatsapp-floating-btn");
      const chatWindow = document.getElementById("whatsapp-chat");
      const closeChat = document.getElementById("close-chat");
      const messageInput = document.getElementById("whatsapp-input");
      const whatsappSend = document.getElementById("whatsapp-send");
      const chatMessages = document.getElementById("chat-messages");

      setTimeout(() => {
        document.activeElement?.blur(); // Retire le focus de l'Ã©lÃ©ment actif
      }, 100); //

      // Ouvrir la fenÃªtre de chat
      floatingBtn.addEventListener("click", () => {
        chatWindow.classList.remove("hidden");
        // Animation d'ouverture
        chatWindow.style.animation = "slideIn 0.3s forwards";
        // Focus sur l'input
        setTimeout(() => messageInput.focus(), 400);
      });

      // Fermer la fenÃªtre de chat
      closeChat.addEventListener("click", () => {
        // Animation de fermeture
        chatWindow.style.animation = "slideOut 0.3s forwards";
        setTimeout(() => {
          chatWindow.classList.add("hidden");
        }, 300);
      });

      // Fonction pour ajouter un message utilisateur au chat
      function addUserMessage(message) {
        // CrÃ©er le conteneur de message
        const messageContainer = document.createElement("div");
        messageContainer.className = "flex justify-end my-2";

        // Formatage du message
        const time = new Date().toLocaleTimeString([], {
          hour: "2-digit",
          minute: "2-digit",
        });
        messageContainer.innerHTML = `
          <div class="bg-[#d9fdd3] rounded-lg p-3 shadow-sm inline-block max-w-[80%] relative">
            <p class="text-gray-800">${message}</p>
            <span class="text-[10px] text-gray-500 absolute bottom-1 right-2">${time}</span>
          </div>
        `;

        // Ajouter Ã  la conversation
        chatMessages.appendChild(messageContainer);
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }

      // Fonction pour ajouter le message de confirmation
      function addConfirmationMessage() {
        // Petit dÃ©lai pour que le message apparaisse aprÃ¨s celui de l'utilisateur
        setTimeout(() => {
          const confirmContainer = document.createElement("div");
          confirmContainer.className = "flex my-2";
          confirmContainer.innerHTML = `
            <div class="bg-white rounded-lg p-3 shadow-sm inline-block max-w-[80%]">
              <p class="text-gray-800">Merci pour votre message ! ðŸ’– N'oubliez pas de cliquer sur la flÃ¨che d'envoi dans WhatsApp pour finaliser votre envoi.</p>
            </div>
          `;

          chatMessages.appendChild(confirmContainer);
          chatMessages.scrollTop = chatMessages.scrollHeight;
        }, 500);
      }

      // Gestion du bouton d'envoi et mise Ã  jour du lien avec le texte saisi
      messageInput.addEventListener("input", () => {
        const message = messageInput.value.trim();
        if (message) {
          whatsappSend.href = `https://wa.me/33668300960?text=${encodeURIComponent(message)}`;
        } else {
          whatsappSend.href = "https://wa.me/33668300960";
        }
      });

      // Fonction pour gÃ©rer l'envoi de message
      function sendMessage() {
        const message = messageInput.value.trim();
        if (message) {
          // Ajouter le message au chat
          addUserMessage(message);

          // Ajouter le message de confirmation
          addConfirmationMessage();

          // Ouvrir WhatsApp avec le message prÃ©configurÃ©
          window.open(
            `https://wa.me/33668300960?text=${encodeURIComponent(message)}`,
            "_blank"
          );

          // Vider l'input
          messageInput.value = "";
        }
      }

      // Envoyer le message en appuyant sur Enter
      messageInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
          sendMessage();
        }
      });

      // GÃ©rer le clic sur le bouton d'envoi
      whatsappSend.addEventListener("click", (e) => {
        e.preventDefault();
        const message = messageInput.value.trim();
        if (message) {
          // Ajouter le message au chat
          addUserMessage(message);

          // Ajouter le message de confirmation
          addConfirmationMessage();

          // Rediriger vers WhatsApp
          window.open(
            `https://wa.me/33668300960?text=${encodeURIComponent(message)}`,
            "_blank"
          );

          // Vider l'input
          messageInput.value = "";
        } else {
          // Si pas de message, juste ouvrir WhatsApp
          window.open("https://wa.me/33668300960", "_blank");
        }
      });
    });

    // Ajouter les animations
    document.head.insertAdjacentHTML(
      "beforeend",
      `
    <style>
      @keyframes slideIn {
        from { transform: translateY(20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }
      
      @keyframes slideOut {
        from { transform: translateY(0); opacity: 1; }
        to { transform: translateY(20px); opacity: 0; }
      }
      
      /* Animation de pulsation pour le bouton flottant */
      @keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.7); }
        70% { box-shadow: 0 0 0 10px rgba(37, 211, 102, 0); }
        100% { box-shadow: 0 0 0 0 rgba(37, 211, 102, 0); }
      }
      
      #whatsapp-floating-btn {
        animation: pulse 2s infinite;
      }
    </style>
  `
    );
  </script>
