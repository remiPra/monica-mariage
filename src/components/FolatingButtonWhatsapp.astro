      #whatsapp-floating-btn {
        animation: pulse 2s infinite;
      }
    </style>
  `
      );

      // Ajouter les gestionnaires d'√©v√©nements pour le modal
      const confirmBtn = document.getElementById("confirm-redirect");
      const cancelBtn = document.getElementById("cancel-redirect");
      const closeModalBtn = document.getElementById("close-modal-button");
      const countdownEl = document.getElementById("countdown");

      let countdownInterval;
      let redirectTimeout;

      // Fonction pour d√©marrer le compte √† rebours
      function startCountdown() {
        let count = 3;
        countdownEl.textContent = count.toString();

        countdownInterval = setInterval(() => {
          count--;
          countdownEl.textContent = count.toString();

          if (count <= 0) {
            clearInterval(countdownInterval);
          }
        }, 1000);

        // Redirection automatique apr√®s 3 secondes
        redirectTimeout = setTimeout(() => {
          // Envoyer l'√©v√©nement √† Google Analytics avec la fonction globale
          if (window.sendGa4Event) {
            window.sendGa4Event("auto_redirect", {
              event_category: "Contact",
              event_label: "WhatsApp Auto Redirect",
              value: 1,
              date_clicked: new Date().toISOString().split("T")[0],
            });
            console.log(
              "Redirection automatique WhatsApp enregistr√©e dans Google Analytics"
            );
          }

          window.open(whatsappLink, "_blank");
          closeModal();
        }, 1000);
      }

      // Fonction pour arr√™ter le compte √† rebours
      function stopCountdown() {
        clearInterval(countdownInterval);
        clearTimeout(redirectTimeout);
      }

      // Fonction pour fermer la modale
      function closeModal() {
        modal.classList.remove("active");
        document.body.style.overflow = "";
        stopCountdown();
      }

      // Ouvrir le modal au lieu du chat avec suivi Google Analytics
      floatingBtn.addEventListener("click", () => {
        // Envoyer l'√©v√©nement √† Google Analytics avec la fonction globale
        if (window.sendGa4Event) {
          window.sendGa4Event("whatsapp_click", {
            event_category: "Contact",
            event_label: "WhatsApp Floating Button",
            value: 1,
            date_clicked: new Date().toISOString().split("T")[0],
          });
          console.log(
            "Clic sur bouton WhatsApp enregistr√© dans Google Analytics"
          );
        }

        modal.classList.add("active");
        document.body.style.overflow = "hidden"; // Emp√™cher le d√©filement
        startCountdown();
      });

      // Fermer le modal
      cancelBtn.addEventListener("click", () => {
        // Envoyer l'√©v√©nement √† Google Analytics avec la fonction globale
        if (window.sendGa4Event) {
          window.sendGa4Event("cancel", {
            event_category: "Contact",
            event_label: "WhatsApp Cancel",
            value: 1,
            date_clicked: new Date().toISOString().split("T")[0],
          });
          console.log("Annulation WhatsApp enregistr√©e dans Google Analytics");
        }

        closeModal();
      });

      // Bouton de fermeture en haut √† droite
      closeModalBtn.addEventListener("click", () => {
        // Envoyer l'√©v√©nement √† Google Analytics avec la fonction globale
        if (window.sendGa4Event) {
          window.sendGa4Event("close", {
            event_category: "Contact",
            event_label: "WhatsApp Close",
            value: 1,
            date_clicked: new Date().toISOString().split("T")[0],
          });
          console.log("Fermeture WhatsApp enregistr√©e dans Google Analytics");
        }

        closeModal();
      });

      // Rediriger vers WhatsApp imm√©diatement
      confirmBtn.addEventListener("click", (e) => {
        e.preventDefault();

        // Envoyer l'√©v√©nement √† Google Analytics avec la fonction globale
        if (window.sendGa4Event) {
          window.sendGa4Event("confirm", {
            event_category: "Contact",
            event_label: "WhatsApp Confirmation",
            value: 1,
            date_clicked: new Date().toISOString().split("T")[0],
          });
          console.log(
            "Confirmation WhatsApp enregistr√©e dans Google Analytics"
          );
        }

        stopCountdown();
        window.open("https://wa.me/33668300960", "_blank");
        closeModal();
      });

      // Fermer en cliquant sur l'overlay
      modal.addEventListener("click", (e) => {
        if (e.target === modal || e.target === modal.firstElementChild) {
          // Envoyer l'√©v√©nement √† Google Analytics avec la fonction globale
          if (window.sendGa4Event) {
            window.sendGa4Event("overlay_close", {
              event_category: "Contact",
              event_label: "WhatsApp Overlay Close",
              value: 1,
              date_clicked: new Date().toISOString().split("T")[0],
            });
            console.log(
              "Fermeture par overlay WhatsApp enregistr√©e dans Google Analytics"
            );
          }

          closeModal();
        }
      });

      // Fermer avec la touche Echap
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && modal.classList.contains("active")) {
          // Envoyer l'√©v√©nement √† Google Analytics avec la fonction globale
          if (window.sendGa4Event) {
            window.sendGa4Event("escape_close", {
              event_category: "Contact",
              event_label: "WhatsApp Escape Close",
              value: 1,
              date_clicked: new Date().toISOString().split("T")[0],
            });
            console.log(
              "Fermeture par touche Echap WhatsApp enregistr√©e dans Google Analytics"
            );
          }

          closeModal();
        }
      });
    });
  </script>
