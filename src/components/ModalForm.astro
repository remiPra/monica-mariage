---
import { Icon } from "astro-icon/components";
const { isVisible } = Astro.props;
---

<!-- ‚úÖ Overlay -->
<div
  id="contact-overlay"
  class={`fixed inset-0 bg-black/50 flex items-center justify-center z-50 transition-opacity duration-500 ease-in-out
    ${isVisible ? "opacity-100 pointer-events-auto" : "opacity-0 pointer-events-none"}`}
>
  <!-- ‚úÖ Contenu du Modal -->
  <div
    id="modal-content"
    class="relative bg-white p-6 rounded-xl w-full max-w-lg shadow-lg transform transition-transform duration-500 ease-in-out
      ${isVisible ? 'scale-100' : 'scale-95'}"
  >
    <!-- ‚ùå Bouton de fermeture -->
    <button
      id="close-overlay"
      type="button"
      class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl"
    >
      ‚ùå <!-- Remplacement temporaire de l'ic√¥ne -->
    </button>

    <!-- üèÜ Titre -->
    <h2 class="text-[#af7749] text-2xl font-bold text-center">
      VOUS R√äVEZ DE LA ROBE PARFAITE ?
    </h2>
    <p class="text-gray-600 text-center mt-2">
      Laissez-nous vos coordonn√©es pour vous aider √† trouver la robe de vos
      r√™ves.
    </p>

    <!-- üìû Boutons rapides -->
    <div class="flex justify-center gap-4 my-4">
      <button
        id="call-button"
        class="flex items-center gap-2 px-4 py-2 bg-[#af7749] text-white rounded-md shadow-md hover:bg-[#8b5e3a] transition"
      >
        üìû Appeler
      </button>
      <button
        id="chat-button"
        class="flex items-center gap-2 px-4 py-2 bg-gray-300 text-gray-800 rounded-md shadow-md hover:bg-gray-400 transition"
      >
        üí¨ Chatter
      </button>
    </div>

    <!-- üìù Formulaire -->
    <form id="contact-form" class="space-y-4">
      <div>
        <label class="block text-gray-700 font-medium">Pr√©nom *</label>
        <input
          id="prenom"
          name="prenom"
          type="text"
          placeholder="Votre pr√©nom"
          required
          class="w-full p-2 border border-gray-300 rounded-md"
        />
      </div>
      <div>
        <label class="block text-gray-700 font-medium">Nom *</label>
        <input
          id="nom"
          name="nom"
          type="text"
          placeholder="Votre nom"
          required
          class="w-full p-2 border border-gray-300 rounded-md"
        />
      </div>
      <div>
        <label class="block text-gray-700 font-medium">Email *</label>
        <input
          id="email"
          name="email"
          type="email"
          placeholder="Votre email"
          required
          class="w-full p-2 border border-gray-300 rounded-md"
        />
      </div>
      <div>
        <label class="block text-gray-700 font-medium">T√©l√©phone *</label>
        <input
          id="telephone"
          name="telephone"
          type="text"
          placeholder="+33 6 12 34 56 78"
          required
          class="w-full p-2 border border-gray-300 rounded-md"
        />
      </div>
      <div>
        <label class="block text-gray-700 font-medium"
          >Message (optionnel)</label
        >
        <textarea
          id="message"
          name="message"
          rows="3"
          placeholder="Votre message"
          class="w-full p-2 border border-gray-300 rounded-md"></textarea>
      </div>

      <!-- üéØ Boutons d'action -->
      <div class="flex justify-between mt-4">
        <button
          type="submit"
          class="px-6 py-2 bg-[#af7749] text-white rounded-md shadow-md hover:bg-[#8b5e3a] transition"
        >
          ENVOYER
        </button>
        <button
          type="button"
          id="no-thanks-btn"
          class="px-6 py-2 bg-gray-300 text-gray-800 rounded-md shadow-md hover:bg-gray-400 transition"
        >
          Non merci
        </button>
      </div>

      <!-- ‚úÖ Message de confirmation -->
      <p
        id="submission-message"
        class="text-center text-gray-700 font-semibold mt-4 hidden"
      >
        Merci, votre message a bien √©t√© envoy√© !
      </p>
    </form>
  </div>
</div>

<!-- ‚úÖ Gestion de l'affichage avec LocalStorage -->
<script defer>
  document.addEventListener("DOMContentLoaded", function () {
    const overlay = document.getElementById("contact-overlay");
    const closeButton = document.getElementById("close-overlay");
    const noThanksButton = document.getElementById("no-thanks-btn");
    const callButton = document.getElementById("call-button");
    const chatButton = document.getElementById("chat-button");
    const contactForm = document.getElementById("contact-form");

    const showOverlay = () => {
      overlay.classList.remove("opacity-0", "pointer-events-none");
      overlay.classList.add("opacity-100", "pointer-events-auto");
    };

    const hideOverlayPermanently = () => {
      overlay.classList.add("opacity-0", "pointer-events-none");
      overlay.classList.remove("opacity-100", "pointer-events-auto");

      sessionStorage.setItem("modalClosed", "true"); // Emp√™che le retour pendant la session
    };

    // Appliquer la fermeture d√©finitive √† tous les √©v√©nements
    [closeButton, noThanksButton, callButton, chatButton].forEach((btn) => {
      btn.addEventListener("click", hideOverlayPermanently);
    });

    contactForm.addEventListener("submit", (e) => {
      e.preventDefault();
      document.getElementById("submission-message").classList.remove("hidden");
      hideOverlayPermanently();
    });

    const checkOverlayVisibility = () => {
      if (sessionStorage.getItem("modalClosed") === "true") return; // Ne pas afficher si d√©j√† ferm√©

      setTimeout(showOverlay, 30000); // Affiche apr√®s 20 secondes
    };

    checkOverlayVisibility();
  });
</script>
