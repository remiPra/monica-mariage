<style>
  #pwa-banner {
    position: fixed;
    inset: 0;
    z-index: 1000;
  }

  .overlay {
    position: fixed;
    inset: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(3px);
  }

  .banner-container {
    background: #fff9f2;
    padding: 25px;
    border-radius: 15px;
    text-align: center;
    max-width: 350px;
    width: 90%;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    position: relative;
    border: 1px solid #c8b09a;
  }

  .close-btn {
    position: absolute;
    right: 10px;
    top: 10px;
    font-size: 20px;
    border: none;
    background: transparent;
    cursor: pointer;
    color: #9e7e63;
  }

  .header {
    margin-bottom: 15px;
  }

  .emoji {
    font-size: 22px;
  }

  h2 {
    color: #9e7e63;
