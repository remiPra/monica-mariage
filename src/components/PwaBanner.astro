    font-weight: normal;
  }

  .logo-container {
    background: white;
    border-radius: 50%;
    width: 90px;
    height: 90px;
    margin: 0 auto 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #f0e2d3;
  }

  .description {
    color: #5a4635;
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .install-btn {
    background: #c8924a;
    color: white;
    padding: 12px 0;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    margin-bottom: 10px;
    width: 100%;
    font-weight: bold;
    transition: background 0.2s;
  }

  .later-btn {
    background: #e0d5c8;
    color: #7a6a5a;
    padding: 10px 0;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    width: 100%;
    font-size: 13px;
    transition: background 0.2s;
  }
</style>

<script>
  // PWA Installation logic
  const banner = document.getElementById("pwa-banner");
  let deferredPrompt;
  const dismissCooldown = 24 * 60 * 60 * 1000; // 24h
  const lastDismissTime = localStorage.getItem("pwaLastDismissTime");

  if (lastDismissTime && Date.now() - lastDismissTime < dismissCooldown) {
    // Ne pas afficher la banni√®re si l'utilisateur l'a refus√©e r√©cemment
  } else {
    window.addEventListener("beforeinstallprompt", (e) => {
      e.preventDefault();
      deferredPrompt = e;

      // Afficher la banni√®re apr√®s un d√©lai
      setTimeout(() => {
        // V√©rifier si l'utilisateur est engag√© (a fait d√©filer la page)
        if (window.scrollY > 300) {
          banner.style.display = "block";
        } else {
          // Attendre que l'utilisateur montre de l'engagement
          const scrollHandler = () => {
            if (window.scrollY > 300) {
              banner.style.display = "block";
              window.removeEventListener("scroll", scrollHandler);
            }
          };
          window.addEventListener("scroll", scrollHandler);
        }
      }, 60000);
    });
  }

  document
    .getElementById("pwa-install-btn")
    ?.addEventListener("click", async () => {
      if (!deferredPrompt) return;
      deferredPrompt.prompt();
      const { outcome } = await deferredPrompt.userChoice;

      if (outcome === "accepted") {
        console.log("‚úÖ Installation accept√©e !");
        // Afficher un message de remerciement
        const overlay = document.querySelector(".overlay");
        if (overlay) {
          overlay.innerHTML = `
            <div class="banner-container">
              <h2 style="color: #9E7E63;">Merci !</h2>
              <p style="color: #5A4635;">Profitez de Monica Mariage sur votre appareil.</p>
              <button id="pwa-thanks-close" style="
                background: #C8924A; 
                color: white; 
                padding: 10px 20px; 
                border: none; 
                border-radius: 8px; 
                cursor: pointer;
                margin-top: 15px;
              ">Fermer</button>
            </div>
          `;
          document
            .getElementById("pwa-thanks-close")
            ?.addEventListener("click", () => {
              banner.style.display = "none";
            });
          setTimeout(() => {
            banner.style.display = "none";
          }, 3000);
        }
      } else {
        console.log("‚ùå Installation refus√©e.");
        localStorage.setItem("pwaLastDismissTime", Date.now());
        banner.style.display = "none";
      }

      localStorage.setItem("pwaBannerDismissed", "true");
    });

  document.getElementById("pwa-later-btn")?.addEventListener("click", () => {
    banner.style.display = "none";
    localStorage.setItem("pwaLastDismissTime", Date.now());
  });

  document.getElementById("pwa-close-btn")?.addEventListener("click", () => {
    banner.style.display = "none";
    localStorage.setItem("pwaLastDismissTime", Date.now());
  });
</script>
