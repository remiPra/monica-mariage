<style>
  /* Animation d'entrée et de sortie luxueuse */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes scaleInElegant {
    from {
      opacity: 0;
      transform: translate(-50%, -50%) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }
  
  @keyframes floatAnimation {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
    100% { transform: translateY(0px); }
  }
  
  @keyframes pulseGlow {
    0% { box-shadow: 0 4px 14px rgba(201,154,154,0.5); }
    50% { box-shadow: 0 4px 20px rgba(201,154,154,0.8); }
    100% { box-shadow: 0 4px 14px rgba(201,154,154,0.5); }
  }

  .open-modal-button {
    animation: floatAnimation 3s ease-in-out infinite, pulseGlow 2s ease-in-out infinite;
  }
  
  .contact-modal.active {
    display: block;
    animation: fadeIn 0.4s ease forwards;
  }
  
  .contact-modal.active > div:last-child {
    animation: scaleInElegant 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }
</style>

<script defer>
  document.addEventListener("DOMContentLoaded", () => {
    const modals = document.querySelectorAll(".contact-modal");
    const openButtons = document.querySelectorAll(".open-modal-button");
    const closeButtons = document.querySelectorAll(".close-modal-button");

    // Event tracking pour Google Analytics
    const trackEvent = (eventName, eventCategory, eventLabel, value = 1) => {
      if (window.sendGa4Event) {
        window.sendGa4Event(eventName, {
          event_category: eventCategory,
          event_label: eventLabel,
          value: value,
          date_clicked: new Date().toISOString().split("T")[0],
        });
      }
    };

    openButtons.forEach((btn, index) => {
      btn.addEventListener("click", () => {
        const modal = modals[index];
        if (modal) {
          modal.classList.add("active");
          document.body.style.overflow = "hidden";
          
          // Track modal ouverture
          trackEvent(
            "appointment_modal_open",
            "Engagement",
            "Modal RDV ouvert",
            1
          );
        }
      });
      
      // Animation spéciale du bouton après quelques secondes
      setTimeout(() => {
        btn.classList.add("attention");
        setTimeout(() => {
          btn.classList.remove("attention");
        }, 1000);
      }, 5000);
    });

    closeButtons.forEach((btn, index) => {
      btn.addEventListener("click", () => {
        const modal = modals[index];
        if (modal) {
          modal.classList.remove("active");
          document.body.style.overflow = "";
          
          // Track modal fermeture
          trackEvent(
            "appointment_modal_close",
            "Engagement",
            "Modal RDV fermé par X",
            0
          );
        }
      });
    });

    modals.forEach((modal) => {
      modal.addEventListener("click", (e) => {
        if (e.target === modal || e.target === modal.firstElementChild) {
          modal.classList.remove("active");
          document.body.style.overflow = "";
          
          // Track modal overlay click
          trackEvent(
            "appointment_modal_overlay_close",
            "Engagement",
            "Modal RDV fermé par overlay",
            0
          );
        }
      });
      
      // Track des clics sur les options de contact
      const whatsappLink = modal.querySelector("a[href*='wa.me']");
      const phoneLink = modal.querySelector("a[href*='tel:']");
      const instagramLink = modal.querySelector("a[href*='instagram']");
      
      if (whatsappLink) {
        whatsappLink.addEventListener("click", () => {
          trackEvent(
            "contact_option_selected",
            "Conversion", 
            "WhatsApp depuis Modal RDV",
            1
          );
        });
      }
      
      if (phoneLink) {
        phoneLink.addEventListener("click", () => {
          trackEvent(
            "contact_option_selected",
            "Conversion", 
            "Téléphone depuis Modal RDV",
            1
          );
        });
      }
      
      if (instagramLink) {
        instagramLink.addEventListener("click", () => {
          trackEvent(
            "contact_option_selected",
            "Conversion", 
            "Instagram depuis Modal RDV",
            1
          );
        });
      }
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") {
        modals.forEach((modal) => {
          if (modal.classList.contains("active")) {
            modal.classList.remove("active");
            document.body.style.overflow = "";
            
            // Track escape key
            trackEvent(
              "appointment_modal_escape",
              "Engagement",
              "Modal RDV fermé par Escape",
              0
            );
          }
        });
      }
    });
    
    // Animation supplémentaire pour attirer l'attention
    const addAttentionClass = () => {
      openButtons.forEach((btn) => {
        btn.classList.add("attention");
        setTimeout(() => {
          btn.classList.remove("attention");
        }, 1000);
      });
    };
    
    // Affiche l'animation d'attention après que la page soit chargée depuis 15 secondes
    setTimeout(addAttentionClass, 15000);
    
    // Affiche l'animation d'attention toutes les 2 minutes si l'utilisateur est toujours sur la page
    setInterval(addAttentionClass, 120000);
  });
</script>