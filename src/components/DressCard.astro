---
export interface Props {
  category: string;
  dressName: string;
  imageUrl: string;
}

const { category, dressName, imageUrl } = Astro.props;
---

<a
  href={`/robes-de-mariee/${category}/${dressName.replace(/\s+/g, "-").toLowerCase()}`}
  class="relative text-center overflow-hidden border-[#C5A880] cursor-pointer fade-in border rounded-2xl h-[500px] md:h-[600px] shadow-lg transition-transform duration-300 hover:scale-[1.03]"
>
  {/* Overlay dégradé */}
  <div class="absolute w-full h-full inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent z-10"></div>

  {/* Image */}
  <img
    src={imageUrl}
    alt={dressName}
    width="300"
    height="400"
    class="absolute top-0 w-full h-full object-cover rounded-lg transition-transform duration-500 hover:scale-105 z-[-1]"
    loading="lazy"
  />

  {/* Contenu en bas, optimisé pour mobile */}
  <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-center z-20 w-[90%] md:w-[85%] bg-white/10 backdrop-blur-lg p-4 md:p-5 rounded-lg shadow-md border border-white/20">
    <p class="text-white font-vibes text-3xl md:text-4xl drop-shadow-md">
      {dressName}
    </p>
    <button class="mt-3 w-full md:w-auto bg-[#C5A880] text-white font-semibold px-5 py-3 rounded-full shadow-md hover:bg-[#A27E5D] hover:scale-105 transition-all duration-300">
      Découvrir
    </button>
  </div>
</a>
