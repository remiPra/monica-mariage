  font-display: swap;
  font-family: "Great Vibes";
  font-style: normal;
  font-weight: 400;
  src: url("/fonts/great-vibes-v19-latin-regular.woff2") format("woff2");
}

[x-cloak] {
  display: none !important;
}

/* Ajoutez cette classe pour utiliser la police Cormorant */
