    window.ga4Loaded = false;

    // Fonction am√©lior√©e pour envoyer des √©v√©nements
    window.sendGa4Event = function (eventName, params = {}) {
      if (window.ga4Loaded) {
        // Si GA4 est charg√©, envoyer l'√©v√©nement imm√©diatement
        gtag("event", eventName, params);
