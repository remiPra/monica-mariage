---
// Layout.astro
import Header from '../components/Header.astro';
import "../styles/global.css";
import FloatingButton from '../components/FloatingButton.astro'
const { title = "Monica Mariage - Boutique de Robes de Mariée", description = "Découvrez nos robes de mariée sur-mesure à Toulouse." } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/cover-robes.jpg" />
    <meta property="og:url" content={Astro.url} />
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.8/dist/cdn.min.js"></script>

</head>

  </head>
  <body>
    <Header/>
    <slot />
    <!-- <FloatingButton client:load  /> -->
  </body>
</html>