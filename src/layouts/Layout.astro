          },
          { once: true }
        );
      }
    };

    // Chargement diff√©r√© de Google Analytics apr√®s 4 secondes
    setTimeout(() => {
      const script = document.createElement("script");
      script.async = true;
      script.src = `https://www.googletagmanager.com/gtag/js?id=${analyticsId}`;
      document.head.appendChild(script);

      script.onload = function () {
        gtag("js", new Date());
        gtag("config", analyticsId);

        // Marquer GA4 comme charg√© et d√©clencher l'√©v√©nement
        window.ga4Loaded = true;
        document.dispatchEvent(new Event("ga4Ready"));
        console.log("‚úÖ Google Analytics 4 is ready");
      };
    }, 4000); // D√©lai de 4 secondes pour optimiser le LCP
  </script>
