import Header from "../components/Header.astro";
import "../styles/global.css";
import FloatingButton from "../components/FloatingButton.astro";
import Footer from "../components/Footer.astro";
import ModalForm from "../components/ModalForm.astro";
import AppointmentBar from "../components/AppointmentBar.astro";
import FolatingButtonWhatsapp from "../components/FolatingButtonWhatsapp.astro";
import WhatsAppModalForm from "../components/WhatsAppModalForm.astro";
import PwaBanner from "../components/PwaBanner.astro";
import ImagePreloader from "../components/ImagePreloader.astro";
const {
  title = "Monica Mariage - Boutique de Robes de Mari√©e",
  description = "D√©couvrez nos robes de mari√©e sur-mesure √† Toulouse.",
  mainImageUrl = "", // Nouvelle prop pour l'image principale
} = Astro.props;

// D√©finir l'ID Google Analytics ici pour qu'il soit accessible dans le script diff√©r√©
const analyticsId = "G-H8RDXC45EX";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/cover-robes.jpg" />
    <meta property="og:url" content={Astro.url} />
    <link
      rel="preload"
      href="/fonts/great-vibes-v19-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/lora-v35-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/cormorant-garamond-v19-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Pr√©chargement conditionnel de l'image principale -->
    {mainImageUrl && <ImagePreloader imageUrl={mainImageUrl} />}

    <!-- Chargement diff√©r√© de Google Analytics pour optimiser le LCP -->
    <script define:vars={{ analyticsId }}>
      // Initialiser la file d'attente pour les √©v√©nements avant le chargement de GA4
      window.dataLayer = window.dataLayer || [];
      window.gtag = function () {
        dataLayer.push(arguments);
      };
      window.ga4Loaded = false;

      // Fonction am√©lior√©e pour envoyer des √©v√©nements
      window.sendGa4Event = function (eventName, params = {}) {
        if (window.ga4Loaded) {
          // Si GA4 est charg√©, envoyer l'√©v√©nement imm√©diatement
          gtag("event", eventName, params);
          console.log(`üìä GA4 Event sent: ${eventName}`, params);
        } else {
          // Sinon, attendre que GA4 soit charg√©
          console.log(
            `‚è≥ Waiting for GA4 to load before sending: ${eventName}`
          );
          document.addEventListener(
            "ga4Ready",
            function () {
              gtag("event", eventName, params);
              console.log(`üìä GA4 Event sent (delayed): ${eventName}`, params);
            },
            { once: true }
          );
        }
      };

      // Chargement diff√©r√© de Google Analytics apr√®s 4 secondes
      setTimeout(() => {
        const script = document.createElement("script");
        script.async = true;
        script.src = `https://www.googletagmanager.com/gtag/js?id=${analyticsId}`;
        document.head.appendChild(script);

        script.onload = function () {
          gtag("js", new Date());
          gtag("config", analyticsId);

          // Marquer GA4 comme charg√© et d√©clencher l'√©v√©nement
          window.ga4Loaded = true;
          document.dispatchEvent(new Event("ga4Ready"));
          console.log("‚úÖ Google Analytics 4 is ready");
        };
      }, 4000); // D√©lai de 4 secondes pour optimiser le LCP
    </script>
  </head>
  <body>
    <Header />
    <slot />
    <FolatingButtonWhatsapp />
    <Footer />
    <AppointmentBar />
    <ModalForm isVisible={false} />
  </body>
</html>
