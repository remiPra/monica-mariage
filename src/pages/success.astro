---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout>
  <Header />
  <div class="container mx-auto my-[70px] max-w-2xl text-center">
    <div class="bg-[rgba(181,116,75,0.7)] p-8 rounded-lg shadow-md">
      <h1 class="font-vibes text-4xl text-white mb-6">
        Merci pour votre message !
      </h1>
      <p class="text-white text-lg mb-8">
        Votre demande a bien été envoyée. Nous vous contacterons très
        prochainement.
      </p>

      <div class="mt-8">
        href="#" id="whatsappLink" class="bg-[#25D366] hover:bg-[#128C7E]
        text-white font-bold py-3 px-6 rounded-full inline-flex items-center" >
        <span class="mr-2">Continuer sur WhatsApp</span>
        <svg viewBox="0 0 24 24" width="24" height="24" fill="white">
          <path
            d="M17.498 14.382c-.301-.15-1.767-.867-2.04-.966-.273-.101-.473-.15-.673.15-.197.295-.771.964-.944 1.162-.175.195-.349.21-.646.075-.3-.15-1.263-.465-2.403-1.485-.888-.795-1.484-1.77-1.66-2.07-.174-.3-.019-.465.13-.615.136-.135.301-.345.451-.523.146-.181.194-.301.297-.496.1-.21.049-.375-.025-.524-.075-.15-.672-1.62-.922-2.206-.24-.584-.487-.51-.672-.51-.172-.015-.371-.015-.571-.015-.2 0-.523.074-.797.359-.273.3-1.045 1.02-1.045 2.475s1.07 2.865 1.219 3.075c.149.18 2.095 3.195 5.076 4.483.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
          ></path>
        </svg>
      </div>
    </div>
  </div>
</Layout>

<script defer>
  document.addEventListener("DOMContentLoaded", () => {
    // Récupérer les paramètres de l'URL
    const urlParams = new URLSearchParams(window.location.search);
    const whatsappMessage = urlParams.get("whatsapp");
    const name = urlParams.get("name");

    // Configurer le lien WhatsApp
    const whatsappLink = document.getElementById("whatsappLink");
    if (whatsappLink && whatsappMessage) {
      whatsappLink.href = `https://wa.me/33668300960?text=${whatsappMessage}`;
    }

    // Ajouter un timer pour ouvrir WhatsApp automatiquement après 3 secondes
    setTimeout(() => {
      if (whatsappLink) {
        window.open(whatsappLink.href, "_blank");
      }
    }, 3000);
  });
</script>
