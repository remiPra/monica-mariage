---
// --- IMPORTATION DES COMPOSANTS NÉCESSAIRES ---
// On importe ici les composants qui étaient gérés par l'ancien Layout
import Header from "../components/Header.astro";
import FolatingButtonWhatsapp from "../components/FolatingButtonWhatsapp.astro";
import Footer from "../components/Footer.astro";
import AppointmentBar from "../components/AppointmentBar.astro";
import "../styles/global.css";
// --- DÉFINITION DES VARIABLES SEO POUR CETTE PAGE ---
const pageTitle = "À propos de Monica Mariage - Créatrice de robes de mariée à Toulouse depuis 2014";
const pageDescription = "Découvrez l'histoire de Monica Mariage, créatrice passionnée de robes de mariée sur-mesure depuis 2014. Expertise, savoir-faire et accompagnement personnalisé dans notre showroom privé à Seysses près de Toulouse.";
const canonicalURL = Astro.url.href; // Génère automatiquement l'URL correcte pour cette page
const pageImage = "https://www.monicamariage.com/showroom-monica-mariage.webp"; // Image la plus pertinente de la page pour le partage

// Variable pour le script Google Analytics
const analyticsId = "G-H8RDXC45EX";
---

<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* --- SECTION SEO COMPLÈTE ET SPÉCIFIQUE À LA PAGE "À PROPOS" --- */}
    
    <!-- Titre et Description -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />

    <!-- Robots et URL Canonique (Indique à Google que cette page est l'originale) -->
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph (Pour le partage sur Facebook, WhatsApp, etc.) -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={pageImage} />
    <meta property="og:type" content="profile" /> {/* "profile" est pertinent pour une page décrivant une personne */}
    <meta property="og:site_name" content="Monica Mariage" />
    <meta property="profile:first_name" content="Monica" />
    <meta property="profile:last_name" content="Wang" />

    <!-- Twitter Card (Pour le partage sur Twitter) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={pageImage} />
    
    <!-- Données Structurées (JSON-LD) pour la créatrice (aide Google à comprendre qui vous êtes) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Monica Wang",
      "jobTitle": "Créatrice de robes de mariée",
      "worksFor": {
        "@type": "Organization",
        "name": "Monica Mariage",
        "url": "https://www.monicamariage.com",
        "sameAs": [
          "https://www.instagram.com/monicamariage/",
          "https://wa.me/33668300960"
        ]
      },
      "description": "Créatrice passionnée de robes de mariée sur-mesure depuis 2014, spécialisée dans l'accompagnement personnalisé des futures mariées.",
      "knowsAbout": ["Robes de mariée sur-mesure", "Couture traditionnelle", "Conseil en mariage", "Morphologie féminine", "Design de robes", "Retouches haute couture"],
      "areaServed": {
        "@type": "Place",
        "name": "Toulouse et Occitanie"
      },
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "1220 chemin de brouquere",
        "addressLocality": "Seysses",
        "addressRegion": "Occitanie",
        "postalCode": "31600",
        "addressCountry": "FR"
      },
      "foundingDate": "2014",
      "email": "monicamariage@hotmail.com",
      "telephone": "+33668300960"
    })} />
    
    {/* --- FIN DE LA SECTION SEO --- */}

    <!-- Éléments techniques : Vérification Google, Polices, Icônes, etc. -->
    <meta name="google-site-verification" content="rq53avWhuLrrx3ABvRJ12myweeaU47sTzsWdbNOatsU" />
    <link rel="preload" href="/fonts/great-vibes-v19-latin-regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/cormorant-garamond-v19-latin-regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preconnect" href="https://res.cloudinary.com" crossorigin />
</head>

<body>
    <Header />

    <main class="pt-24 mt-[100px]">
      <!-- Section Hero -->
      <section class="py-16 bg-gradient-to-b h-800 from-white to-[#FDE9E6]">
        <div class="container mx-auto px-4 max-w-6xl">
          <div class="text-center mb-12">
            <div class="w-32 h-32 mb-6 mx-auto">
              <img 
                src="/image/iconerobe.png" 
                alt="Monica Mariage - Créatrice de robes de mariée" 
                width="128" 
                height="128" 
                class="w-full h-full object-cover rounded-full border-4 border-[#F0E6E2] shadow-lg"
                loading="eager"
              />
            </div>
            <h1 class="font-vibes text-5xl md:text-6xl text-[#af7749] mb-4">
              L'histoire de Monica Mariage
            </h1>
            <div class="flex items-center justify-center gap-4 mb-8">
              <span class="h-px w-16 bg-[#C5A880]"></span>
              <p class="text-[#8B7569] text-sm font-medium">CRÉATRICE PASSIONNÉE DEPUIS 2014</p>
              <span class="h-px w-16 bg-[#C5A880]"></span>
            </div>
            <p class="text-xl text-[#5F4B3F] leading-relaxed max-w-3xl mx-auto">
              "Chaque mariée mérite une robe unique qui raconte son histoire d'amour"
            </p>
          </div>
        </div>
      </section>
  
      <!-- Section Histoire personnelle -->
      <section class="py-16 bg-white">
        <div class="container mx-auto px-4 max-w-6xl">
          <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
            <div class="order-2 h-30 w-30 md:w-125 md:h-125 lg:order-1">
              <img 
                src="/showroom-monica-mariage.webp" 
                alt="Monica dans son atelier de création de robes de mariée à Toulouse" 
                class="rounded-2xl shadow-xl w-full hover:scale-105 transition-transform duration-300"
                loading="lazy"
                onerror="this.src='/image/iconerobe.png'"
              />
            </div>
            <div class="order-1 lg:order-2">
              <h2 class="text-3xl md:text-4xl font-semibold text-[#5F4B3F] mb-6">
                Une passion devenue expertise
              </h2>
              <p class="text-[#5F4B3F] leading-relaxed mb-6 text-lg">
                Depuis <strong>2014</strong>, Monica Mariage accompagne les futures mariées de Toulouse 
                et sa région dans la création de leur robe de rêve. Spécialisée dans le 
                <strong>sur-mesure</strong>, Monica met son expertise au service de chaque mariée pour 
                créer une robe unique qui correspond parfaitement à sa personnalité et 
                sa silhouette.
              </p>
              <p class="text-[#5F4B3F] leading-relaxed mb-6 text-lg">
                Installée dans un <strong>showroom privé à Seysses</strong>, Monica privilégie un 
                accompagnement personnalisé dans un cadre intimiste, loin de l'agitation 
                des grands salons. Chaque rendez-vous est un moment privilégié où la 
                future mariée est notre seule priorité.
              </p>
              <div class="bg-[#FDF8F7] border-l-4 border-[#C99A9A] p-6 rounded-r-lg">
                <p class="text-[#5F4B3F] italic font-medium">
                  "Mon objectif ? Que chaque mariée se sente belle, confiante et unique 
                  le jour de son mariage. C'est pour cela que je crée des robes sur-mesure 
                  qui s'adaptent à chaque femme."
                </p>
                <span class="text-[#af7749] font-semibold mt-2 block">— Monica</span>
              </div>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Section Savoir-faire -->
      <section class="py-16 bg-gradient-to-b from-[#FDF8F7] to-white">
        <div class="container mx-auto px-4 max-w-6xl">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-semibold text-[#5F4B3F] mb-6">
              Notre savoir-faire unique
            </h2>
            <p class="text-[#8B7569] text-lg max-w-2xl mx-auto">
              Plus qu'une simple boutique, Monica Mariage offre une expérience sur-mesure 
              complète pour créer la robe de vos rêves.
            </p>
          </div>
          <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="text-center group hover:scale-105 transition-transform duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-[#C99A9A] to-[#af7749] rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="white"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/><circle cx="12" cy="12" r="8" stroke="white" stroke-width="2" fill="none"/></svg>
              </div>
              <h3 class="text-xl font-semibold text-[#5F4B3F] mb-3">Création 100% sur-mesure</h3>
              <p class="text-[#8B7569] leading-relaxed">Chaque robe est créée selon vos mesures exactes, vos préférences de style et votre morphologie unique.</p>
            </div>
            <div class="text-center group hover:scale-105 transition-transform duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-[#C99A9A] to-[#af7749] rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="white"><path d="M12 2L13.09 8.26L22 9L13.09 9.74L12 16L10.91 9.74L2 9L10.91 8.26L12 2Z"/></svg>
              </div>
              <h3 class="text-xl font-semibold text-[#5F4B3F] mb-3">Accompagnement expert</h3>
              <p class="text-[#8B7569] leading-relaxed">Conseils personnalisés pour choisir le style, les tissus et les détails qui vous sublimeront le jour J.</p>
            </div>
            <div class="text-center group hover:scale-105 transition-transform duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-[#C99A9A] to-[#af7749] rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="white"><path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/></svg>
              </div>
              <h3 class="text-xl font-semibold text-[#5F4B3F] mb-3">Showroom privé</h3>
              <p class="text-[#8B7569] leading-relaxed">Rendez-vous exclusifs dans un cadre intimiste et chaleureux, sans contrainte de temps ni pression commerciale.</p>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Section Chiffres clés -->
      <section class="py-16 bg-[#af7749] text-white">
        <div class="container mx-auto px-4 max-w-6xl">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-semibold mb-4">Monica Mariage en chiffres</h2>
                <p class="text-white/90 text-lg">Plus de 10 ans d'expertise au service des futures mariées</p>
            </div>
            <div class="grid md:grid-cols-4 gap-8 text-center">
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">11</div><div class="text-lg font-medium mb-1">Années</div><div class="text-white/80 text-sm">d'expérience depuis 2014</div></div>
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">750€-1850€</div><div class="text-lg font-medium mb-1">Tarifs</div><div class="text-white/80 text-sm">transparents et justes</div></div>
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">4.2★</div><div class="text-lg font-medium mb-1">Note Google</div><div class="text-white/80 text-sm">sur 151 avis clients</div></div>
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">6</div><div class="text-lg font-medium mb-1">Semaines</div><div class="text-white/80 text-sm">délai de confection</div></div>
            </div>
        </div>
      </section>
  
      <!-- ... Reste du contenu de la page ... -->
  
    </main>

    <FolatingButtonWhatsapp />
    <Footer />
    <AppointmentBar />

    <!-- Script Google Analytics -->
    <script define:vars={{ analyticsId }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', analyticsId);
    </script>
</body>
</html>