---
// --- IMPORTATION DES COMPOSANTS NÉCESSAIRES ---
import Header from "../components/Header.astro";
import FolatingButtonWhatsapp from "../components/FolatingButtonWhatsapp.astro";
import Footer from "../components/Footer.astro";
import AppointmentBar from "../components/AppointmentBar.astro";
import "../styles/global.css";

// --- DÉFINITION DES VARIABLES SEO POUR CETTE PAGE ---
const pageTitle = "À propos de Monica Mariage - Créatrice de robes de mariée à Toulouse depuis 2014";
const pageDescription = "Découvrez l'histoire de Monica Mariage, créatrice passionnée de robes de mariée sur-mesure. Notre showroom privé de 80m² à Seysses (près de Toulouse) vous accueille dans un cadre intime et chaleureux.";
const canonicalURL = Astro.url.href; 
const pageImage = "https://www.monicamariage.com/showroom-monica-mariage.webp"; 
const analyticsId = "G-H8RDXC45EX";

// Données pour la FAQ
const faqItems = [
  {
    question: "Quelle est la philosophie de Monica Mariage ?",
    answer: "Notre philosophie est de vous accompagner dans la création d'une robe qui reflète votre personnalité, en mettant l'accent sur des tissus de haute qualité, sélectionnés avec soin auprès de partenaires de renom comme Anna Sposa."
  },
  {
    question: "Pourquoi avoir choisi Seysses pour le showroom ?",
    answer: "Nous avons déménagé notre showroom de Toulouse à Seysses pour offrir un espace plus grand et plus intime, idéalement conçu pour l'essayage de votre future robe de mariée. Notre showroom de plus de 80 m² vous permet de vivre une expérience unique et confortable, loin de l'agitation de la ville."
  },
  {
    question: "Combien de robes puis-je essayer dans le showroom ?",
    answer: "Le showroom de Monica Mariage dispose d'une collection permanente d'au moins 50 robes de mariée. Ce large choix vous permet de trouver différents styles et modèles pour votre essayage."
  }
];

// Données structurées pour la FAQ
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqItems.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};
---

<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    
    <meta name="ai-content-declaration" content="human-generated">
    <meta name="content-type-ai" content="factual">
    <meta name="expertise-level" content="expert">
    <meta name="content-freshness" content="monthly">

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={pageImage} />
    <meta property="og:type" content="profile" />
    <meta property="og:site_name" content="Monica Mariage" />
    <meta property="profile:first_name" content="Monica" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={pageImage} />
    
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Monica",
      "jobTitle": "Créatrice de robes de mariée",
      "worksFor": {
        "@type": "Organization",
        "name": "Monica Mariage",
        "url": "https://www.monicamariage.com",
        "sameAs": [
          "https://www.instagram.com/monicamariage/",
          "https://wa.me/33668300960"
        ]
      },
      "description": "Créatrice passionnée qui a fondé Monica Mariage en 2014, mue par son amour pour les robes de mariée et son désir de proposer des créations uniques et de qualité.",
      "knowsAbout": ["Robes de mariée sur-mesure", "Tissus de qualité", "Accompagnement personnalisé"],
      "areaServed": {
        "@type": "Place",
        "name": "Toulouse et Occitanie"
      },
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "1220 chemin de brouquere",
        "addressLocality": "Seysses",
        "addressRegion": "Occitanie",
        "postalCode": "31600",
        "addressCountry": "FR"
      },
      "foundingDate": "2014",
      "email": "monicamariage@hotmail.com",
      "telephone": "+33668300960"
    })} />
    
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

    <meta name="google-site-verification" content="rq53avWhuLrrx3ABvRJ12myweeaU47sTzsWdbNOatsU" />
    <link rel="preload" href="/fonts/great-vibes-v19-latin-regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/cormorant-garamond-v19-latin-regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preconnect" href="https://res.cloudinary.com" crossorigin />
</head>

<body>
    <Header />

    <main class="pt-24 mt-[100px]">
      <section class="py-16 bg-gradient-to-b h-800 from-white to-[#FDE9E6]">
        <div class="container mx-auto px-4 max-w-6xl">
          <div class="text-center mb-12">
            <div class="w-32 h-32 mb-6 mx-auto">
              <img 
                src="/image/iconerobe.png" 
                alt="Monica Mariage - Créatrice de robes de mariée" 
                width="128" 
                height="128" 
                class="w-full h-full object-cover rounded-full border-4 border-[#F0E6E2] shadow-lg"
                loading="eager"
              />
            </div>
            <h1 class="font-vibes text-5xl md:text-6xl text-[#af7749] mb-4">
              L'histoire de Monica Mariage
            </h1>
            <div class="flex items-center justify-center gap-4 mb-8">
              <span class="h-px w-16 bg-[#C5A880]"></span>
              <p class="text-[#8B7569] text-sm font-medium">CRÉATRICE PASSIONNÉE DEPUIS 2014</p>
              <span class="h-px w-16 bg-[#C5A880]"></span>
            </div>
            <p class="text-xl text-[#5F4B3F] leading-relaxed max-w-3xl mx-auto">
              "Chaque mariée mérite une robe unique qui raconte son histoire d'amour"
            </p>
          </div>
        </div>
      </section>
  
      <section class="py-16 bg-white">
        <div class="container mx-auto px-4 max-w-6xl">
          <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
            <div class="order-2 h-30 w-30 md:w-125 md:h-125 lg:order-1">
              <img 
                src="/showroom-monica-mariage.webp" 
                alt="Monica dans son atelier de création de robes de mariée à Toulouse" 
                class="rounded-2xl shadow-xl w-full hover:scale-105 transition-transform duration-300"
                loading="lazy"
                onerror="this.src='/image/iconerobe.png'"
              />
            </div>
            <div class="order-1 lg:order-2">
              <h2 class="text-3xl md:text-4xl font-semibold text-[#5F4B3F] mb-6">
                Une passion devenue expertise
              </h2>
              <p class="text-[#5F4B3F] leading-relaxed mb-6 text-lg">
                Monica a fondé Monica Mariage en <strong>2014</strong>, mue par son amour pour la robe de mariée et son désir d'accompagner chaque future mariée de Toulouse et sa région dans le choix de sa robe de rêve. Plutôt qu'une simple boutique, Monica a créé un lieu où la passion se mêle à l'expertise pour offrir une expérience sur-mesure inoubliable.
              </p>
              <p class="text-[#5F4B3F] leading-relaxed mb-6 text-lg">
                Spécialisée dans le sur-mesure, Monica met son expertise au service de chaque mariée pour créer une robe unique qui correspond parfaitement à sa personnalité et à sa silhouette.
              </p>
              <div class="bg-[#FDF8F7] border-l-4 border-[#C99A9A] p-6 rounded-r-lg">
                <p class="text-[#5F4B3F] italic font-medium">
                  "Mon objectif ? Que chaque mariée se sente belle, confiante et unique le jour de son mariage. C'est pour cela que je crée des robes sur-mesure qui s'adaptent à chaque femme."
                </p>
                <span class="text-[#af7749] font-semibold mt-2 block">― Monica</span>
              </div>
            </div>
          </div>
        </div>
      </section>
  
      <section class="py-16 bg-gradient-to-b from-[#FDF8F7] to-white">
        <div class="container mx-auto px-4 max-w-6xl">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-semibold text-[#5F4B3F] mb-6">
              Notre savoir-faire unique
            </h2>
            <p class="text-[#8B7569] text-lg max-w-2xl mx-auto">
              Plus qu'une simple boutique, Monica Mariage offre une expérience sur-mesure complète pour créer la robe de vos rêves.
            </p>
          </div>
          <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="text-center group hover:scale-105 transition-transform duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-[#C99A9A] to-[#af7749] rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="white"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/><circle cx="12" cy="12" r="8" stroke="white" stroke-width="2" fill="none"/></svg>
              </div>
              <h3 class="text-xl font-semibold text-[#5F4B3F] mb-3">Tissus de haute qualité</h3>
              <p class="text-[#8B7569] leading-relaxed">Nous collaborons avec des créateurs de renom comme Anna Sposa pour vous garantir des matières nobles et un confort exceptionnel.</p>
            </div>
            <div class="text-center group hover:scale-105 transition-transform duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-[#C99A9A] to-[#af7749] rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="white"><path d="M12 2L13.09 8.26L22 9L13.09 9.74L12 16L10.91 9.74L2 9L10.91 8.26L12 2Z"/></svg>
              </div>
              <h3 class="text-xl font-semibold text-[#5F4B3F] mb-3">Accompagnement expert</h3>
              <p class="text-[#8B7569] leading-relaxed">Conseils personnalisés pour choisir le style, les tissus et les détails qui vous sublimeront le jour J.</p>
            </div>
            <div class="text-center group hover:scale-105 transition-transform duration-300">
              <div class="w-20 h-20 bg-gradient-to-br from-[#C99A9A] to-[#af7749] rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="white"><path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/></svg>
              </div>
              <h3 class="text-xl font-semibold text-[#5F4B3F] mb-3">Showroom privatisé</h3>
              <p class="text-[#8B7569] leading-relaxed">Profitez d'un cadre intime et chaleureux de plus de 80m², loin du stress, pour un essayage serein en toute tranquillité.</p>
            </div>
          </div>
        </div>
      </section>
  
      <section class="py-16 bg-[#af7749] text-white">
        <div class="container mx-auto px-4 max-w-6xl">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-semibold mb-4">Monica Mariage en chiffres</h2>
                <p class="text-white/90 text-lg">Plus de 10 ans d'expertise au service des futures mariées</p>
            </div>
            <div class="grid md:grid-cols-4 gap-8 text-center">
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">11+</div><div class="text-lg font-medium mb-1">Années</div><div class="text-white/80 text-sm">d'expérience depuis 2014</div></div>
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">80m²</div><div class="text-lg font-medium mb-1">Showroom</div><div class="text-white/80 text-sm">espace intime et spacieux</div></div>
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">50+</div><div class="text-lg font-medium mb-1">Robes</div><div class="text-white/80 text-sm">en exposition permanente</div></div>
                <div class="group"><div class="text-4xl md:text-5xl font-bold mb-2 text-[#FDE9E6]">4.2★</div><div class="text-lg font-medium mb-1">Note Google</div><div class="text-white/80 text-sm">sur 151 avis clients</div></div>
            </div>
        </div>
      </section>
      
      <section class="py-16 bg-white" aria-labelledby="faq-heading">
        <div class="container mx-auto px-4 max-w-6xl">
            <div class="text-center mb-12">
                <h2 id="faq-heading" class="text-3xl md:text-4xl font-semibold text-[#5F4B3F] mb-6">
                    Foire aux questions sur notre expertise
                </h2>
                <p class="text-[#8B7569] text-lg max-w-2xl mx-auto">
                    Nous répondons aux questions les plus fréquentes pour vous aider à mieux comprendre notre approche.
                </p>
            </div>
            <div class="space-y-6">
                {faqItems.map(item => (
                    <div class="bg-[#FDF8F7] p-6 rounded-lg shadow-sm">
                        <h3 class="text-xl font-semibold text-[#5F4B3F] mb-2">{item.question}</h3>
                        <p class="text-[#8B7569] leading-relaxed">{item.answer}</p>
                    </div>
                ))}
            </div>
        </div>
      </section>
  
    </main>

    <FolatingButtonWhatsapp />
    <Footer />
    <AppointmentBar />

    <script define:vars={{ analyticsId }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', analyticsId);
    </script>
</body>
</html>