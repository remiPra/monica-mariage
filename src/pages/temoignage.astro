import { sanityClient } from "../sanityClient";

// R√©cup√©ration des t√©moignages
const temoignages = await sanityClient.fetch(`
  *[_type == "temoignage" ] | order(order asc) {
    _id,
    clientName,
    dateMarriage,
    rating,
    testimonial_html,
    "imagesUrl": imagesCloudinary[0].url,
    "robeNom": robe->dressName
  }
`);
console.log("üöÄ SANITY: t√©moignages =", JSON.stringify(temoignages, null, 2));

// T√©moignagesPage.astro
const title = "Elles ont dit Oui üíç";
