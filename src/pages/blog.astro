---
import Layout from "../layouts/Layout.astro";
import { sanityClient } from "../sanityClient";

// R√©cup√©ration des articles de blog avec gestion des cas o√π la cat√©gorie est absente
const articles = await sanityClient.fetch(`
  *[_type == "blogPost"] | order(order asc) {
    _id,
    title,
    slug,
    publishedAt,
    excerpt,
    featured,
    "imageUrl": mainImageCloudinary.url,
    "categorieName": categorie->title,
    "categorieSlug": categorie->slug.current,
    "robesAssociees": robesAssociees[]->{
      _id,
      dressName,
      slug
    }
  }
`);
console.log("üöÄ SANITY: articles =", JSON.stringify(articles, null, 2));

// R√©cup√©rer toutes les cat√©gories pour le filtre
const categories = await sanityClient.fetch(`
  *[_type == "categorie"] | order(title asc) {
    _id,
    title,
    slug
  }
`);

// Fonction pour formater la date
function formatDateFr(dateString) {
  if (!dateString) return "";

  const options = { day: "numeric", month: "long", year: "numeric" };
  return new Date(dateString).toLocaleDateString("fr-FR", options);
}

// Fonction pour tronquer le texte
function truncateText(text, maxLength = 150) {
  if (!text || text.length <= maxLength) return text;
  return text.slice(0, maxLength) + '...';
}
